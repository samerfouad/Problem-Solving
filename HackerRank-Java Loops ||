import java.util.*;
import java.io.*;

class Solution{
public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int q=sc.nextInt();     // Input Query
        for(int i=0; i<q; i++) //Number of output rows
        {
            int a = sc.nextInt(); // A variable in series
            int b = sc.nextInt(); // B variable in series
            int n = sc.nextInt(); // n variable in series 


                for (int j=0; j<n; j++)
                {
                a += b * (int) Math.pow(2, j);
                System.out.print(a + " ");
                }// End of Power Counter
                System.out.println();
            

        }
        sc.close();
        }
}
